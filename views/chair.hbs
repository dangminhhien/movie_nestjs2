<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Seat Selection</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
  <style>
    .seat {
      width: 40px;
      height: 40px;
      margin: 5px;
      cursor: pointer;
      display: inline-block;
      border-radius: 5px;
      text-align: center;
      line-height: 40px;
      color: white;
      font-weight: bold;
    }
    .seat-row {
      margin-bottom: 10px;
      display: flex;
      justify-content: center;
    }
    .screen {
      background-color: white;
      color: black;
      height: 30px;
      margin: 10px auto;
      width: 80%;
      text-align: center;
      font-weight: bold;
      font-size: 18px;
    }
    .seat.available { background-color: purple; }
    .seat.selected { background-color: pink; }
    .seat.booked { background-color:  rgb(52, 189, 25); cursor: not-allowed; }
    .legend {
      margin-top: 20px;
      text-align: center;
    }
    .legend-item {
      display: inline-block;
      margin-right: 20px;
    }
    .legend-color {
      display: inline-block;
      width: 20px;
      height: 20px;
      margin-right: 5px;
      vertical-align: middle;
    }
  </style>
</head>
<body>

  {{> header}}

  <div class="container">
    <h2>Đặt ghế cho phim {{movieName}}</h2>


    <div class="screen">MÀN HÌNH</div>

    <form method="post" action="/chair/book">
      {{#each chairs}}
        <div class="seat-row">
          {{#each this}} 
            <div class="seat {{status}}" data-id="{{id}}">{{id}}</div>
          {{/each}}
        </div>
      {{/each}}

      <input type="hidden" name="chairs" id="selected-chairs">
      <button type="submit" class="btn btn-primary mt-4">Đặt ghế</button>
      <a href="/chair/reset" class="btn btn-secondary mt-4">Reset</a>
    </form>

    <div class="legend">
      <div class="legend-item">
        <div class="legend-color" style="background-color: rgb(52, 189, 25);"></div> Đã đặt
      </div>
      <div class="legend-item">
        <div class="legend-color" style="background-color: pink;"></div> Ghế bạn chọn
      </div>
      <div class="legend-item">
        <div class="legend-color" style="background-color: purple;"></div> Ghế thường
      </div>
    </div>
  </div>

  <script>
    document.querySelectorAll('.seat.available').forEach(seat => {
      seat.addEventListener('click', () => {
        if (seat.classList.contains('selected')) {
          seat.classList.remove('selected');
        } else {
          seat.classList.add('selected');
        }
        updateSelectedChairs();
      });
    });

    function updateSelectedChairs() {
      const selectedChairs = Array.from(document.querySelectorAll('.seat.selected'))
                                 .map(seat => seat.getAttribute('data-id'));
      document.getElementById('selected-chairs').value = selectedChairs.join(',');
    }
  </script>
</body>
</html>
