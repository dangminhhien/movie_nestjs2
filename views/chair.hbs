    .seat.available { background-color: purple; }
    .seat.selected { background-color: pink; }
    .seat.vip { background-color: red; }
    .seat.booked { background-color: gray; cursor: not-allowed; }
    .seat.double { background-color: hotpink; }
    .seat.central { border: 2px solid lime; }
